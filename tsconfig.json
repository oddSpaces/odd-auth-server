{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/src/*": [
        "./src/*"
      ],
      "@/client/*": [
        "./src/client/*"
      ],
      "@/next/*": [
        "./src/next/*"
      ],
      "@/strategies/*": [
        "./src/strategies/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}